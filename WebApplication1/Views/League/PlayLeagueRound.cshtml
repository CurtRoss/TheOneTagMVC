        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.HiddenFor(modelItem => item.PlayerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeagueRanking)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsStarred, new { Id = item.PlayerId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoundScore)
            </td>

        
    

            <td>
                @Html.ActionLink("Edit", "UserLeagueEdit", new {  id=item.PlayerId, leagueId =ViewBag.leagueId }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>

        </tr>
    }

</table>

<p>
    @Html.ActionLink("Submit Scores", "PlayRound", new { id = ViewBag.leagueId})
</p>



<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Play Round" class="btn btn-default" />
    </div>
</div>

@section scripts{
    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            $("i[data-toggle='star']")
                .css({ "cursor": "pointer" })
                .click(function (e) {
                    var target = $(e.target);
                    var playerId = target.attr("data-id")
                    var starSet = target.hasClass("glyphicon-star")

                    $.ajax({
                        method: starSet ? "DELETE" : "PUT",
                        url: "/api/Player/" + playerId + "/star",
                        data: null
                    })
                        .done(function (r) {
                            target.removeClass();
                            target.addClass("glyphicon " + (starSet ? "glyphicon-star-empty" : "glyphicon-star"));
                        })
                        .fail(function (r) {
                            alert("Failed to change star status");
                        });
                });
        });
    </script>
}